# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml, *.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{build,yml,ui,yaml}]
indent_size = 2

[*.{json,py}]
indent_size = 4
