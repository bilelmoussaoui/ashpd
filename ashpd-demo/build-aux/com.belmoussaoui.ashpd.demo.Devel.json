{
    "app-id": "com.belmoussaoui.ashpd.demo.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable", "org.freedesktop.Sdk.Extension.llvm12"],
    "command": "ashpd-demo",
    "finish-args" : [
        "--socket=fallback-x11",
        "--share=ipc",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.a11y.Bus",
        "--env=RUST_LOG=ashpd_demo=debug,ashpd=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--filesystem=xdg-run/pipewire-0"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources" : [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                "tag": "1.0.0-alpha.2"
            }],
            "modules": [
                {
                    "name" : "libsass",
                    "buildsystem" : "meson",
                    "cleanup": ["*"],
                    "sources" : [{
                        "type" : "git",
                        "url" : "https://github.com/lazka/libsass.git",
                        "branch" : "meson"
                    }]
                },
                {
                    "name" : "sassc",
                    "buildsystem" : "meson",
                    "cleanup": ["*"],
                    "sources" : [{
                        "type" : "git",
                        "url" : "https://github.com/lazka/sassc.git",
                        "branch" : "meson"
                    }]
                }
            ]
        },
        {
            "name": "ashpd-demo",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": ["-Dprofile=development"],
            "build-options": {
                "prepend-path": "/usr/lib/sdk/llvm12/bin",
                "prepend-ld-library-path": "/usr/lib/sdk/llvm12/lib"
            },
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
