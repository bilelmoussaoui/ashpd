<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="WallpaperPage" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="hexpand">True</property>
        <property name="spacing">12</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkLabel">
            <property name="label">Wallpaper</property>
            <property name="halign">start</property>
            <style>
              <class name="title-2"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">Set a file as a wallpaper</property>
            <property name="halign">start</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">Options</property>
            <property name="halign">start</property>
            <property name="margin-top">12</property>
            <style>
              <class name="title-4"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkListBox">
            <property name="selection-mode">none</property>
            <child>
              <object class="AdwActionRow">
                <property name="title">Show Preview</property>
                <property name="activatable-widget">preview_switch</property>
                <child>
                  <object class="GtkSwitch" id="preview_switch">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <style>
              <class name="content" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label">Select A File</property>
            <property name="halign">start</property>
            <property name="action-name">wallpaper.select</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
