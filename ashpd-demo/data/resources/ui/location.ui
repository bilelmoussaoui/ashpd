<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="LocationPage" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="hexpand">True</property>
        <property name="spacing">12</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Request the user location</property>
            <child>
              <object class="GtkListBox">
                <property name="selection-mode">none</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Distance Treshold</property>
                    <property name="activatable-widget">distance_spin</property>
                    <child>
                      <object class="GtkSpinButton" id="distance_spin">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Time Treshold</property>
                    <property name="activatable-widget">time_spin</property>
                    <child>
                      <object class="GtkSpinButton" id="time_spin">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Accuracy</property>
                    <property name="activatable-widget">accuracy_combo</property>
                    <child>
                      <object class="GtkComboBox" id="accuracy_combo">
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="content" />
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label">Locate</property>
            <property name="halign">start</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
