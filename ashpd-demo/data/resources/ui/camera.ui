<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="CameraPage" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="hexpand">True</property>
        <property name="spacing">12</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Camera</property>
            <child>
              <object class="GtkListBox">
                <property name="selection-mode">none</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title">Is a camera available?</property>
                    <child>
                      <object class="GtkLabel" id="camera_available">
                        <property name="label">Undefined</property>
                        <property name="halign">start</property>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="content"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="label">Start a stream over PipeWire</property>
            <property name="halign">start</property>
            <property name="action-name">camera.start-stream</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
