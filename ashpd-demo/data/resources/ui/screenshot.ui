<interface>
  <template class="ScreenshotPage" parent="GtkBox">
    <property name="hexpand">True</property>
    <property name="spacing">12</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkLabel">
        <property name="label">Take a Screenshot</property>
        <property name="halign">start</property>
        <style>
          <class name="title-2"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="label">Take a screenshot of a window or an area</property>
        <property name="halign">start</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="label">Options</property>
        <property name="halign">start</property>
        <style>
          <class name="title-4"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkCheckButton">
            <property name="label">Interactive</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton">
            <property name="label">Modal</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkButton">
        <property name="label">Take a Screenshot</property>
        <property name="halign">start</property>
        <property name="margin-top">18</property>
        <property name="margin-bottom">18</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="label">Color Picker</property>
        <property name="halign">start</property>
        <style>
          <class name="title-2"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="label">Ask the compositor to pick a color</property>
        <property name="halign">start</property>
      </object>
    </child>
    <child>
      <object class="GtkButton">
        <property name="label">Pick a Color</property>
        <property name="halign">start</property>
        <property name="margin-top">18</property>
        <property name="margin-bottom">18</property>
        <property name="action-name">screenshot.pick-color</property>
      </object>
    </child>
  </template>
</interface>
